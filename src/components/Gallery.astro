---
interface Props {
  images: {
    before: string;
    after: string;
    title: string;
  }[];
}

const { images } = Astro.props;
---

<section class="py-12 bg-slate-900 rounded-3xl my-12">
  <div class="container mx-auto px-4">
    <h3 class="text-2xl font-bold text-white mb-8 text-center">Transformation Gallery</h3>
    
    <div class="grid md:grid-cols-2 gap-8">
      {images.map((item) => (
        <div class="bg-slate-950 p-4 rounded-xl border border-slate-800">
          <h4 class="text-lg font-semibold text-slate-300 mb-4 text-center">{item.title}</h4>
          <div class="grid grid-cols-2 gap-2">
            <div class="relative group">
              <span class="absolute top-2 left-2 bg-black/70 text-white text-xs px-2 py-1 rounded">Before</span>
              <img src={item.before} alt={`Before ${item.title}`} class="rounded-lg object-cover h-48 w-full border border-slate-800" />
            </div>
            <div class="relative group">
              <span class="absolute top-2 left-2 bg-blue-600/90 text-white text-xs px-2 py-1 rounded">After</span>
              <img src={item.after} alt={`After ${item.title}`} class="rounded-lg object-cover h-48 w-full border border-slate-800" />
            </div>
          </div>
        </div>
      ))}
    </div>
  </div>
</section>
