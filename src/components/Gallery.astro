---
interface Props {
  images: {
    before: string;
    after: string;
    title: string;
  }[];
}

const { images } = Astro.props;

// Flatten images for navigation
const flatImages = images.flatMap((img) => [
  { src: img.before, caption: `Before ${img.title}` },
  { src: img.after, caption: `After ${img.title}` },
]);
---

<section
  class="py-12 bg-slate-900 rounded-3xl my-12 relative animate-on-scroll"
>
  <div class="container mx-auto px-4">
    <h3 class="text-2xl font-bold text-white mb-8 text-center">
      Transformation Gallery
    </h3>

    <div class="grid md:grid-cols-2 gap-8">
      {
        images.map((item, index) => (
          <div
            class={`bg-slate-950 p-4 rounded-xl border border-slate-800 animate-on-scroll delay-${(index + 1) * 100}`}
          >
            <h4 class="text-lg font-semibold text-slate-300 mb-4 text-center">
              {item.title}
            </h4>
            <div class="grid grid-cols-2 gap-2">
              <div
                class="relative group cursor-pointer overflow-hidden rounded-lg"
                onclick={`openLightbox(${index * 2})`}
              >
                <span class="absolute top-2 left-2 bg-black/70 text-white text-xs px-2 py-1 rounded z-10 pointer-events-none">
                  Before
                </span>
                <img
                  src={item.before}
                  alt={`Before ${item.title}`}
                  class="object-cover h-48 w-full border border-slate-800 group-hover:scale-105 transition-transform duration-500"
                />
                <div class="absolute inset-0 bg-black/0 group-hover:bg-black/20 transition-colors pointer-events-none flex items-center justify-center">
                  <svg
                    class="w-8 h-8 text-white opacity-0 group-hover:opacity-100 transition-opacity"
                    fill="none"
                    viewBox="0 0 24 24"
                    stroke="currentColor"
                  >
                    <path
                      stroke-linecap="round"
                      stroke-linejoin="round"
                      stroke-width="2"
                      d="M21 21l-6-6m2-5a7 7 0 11-14 0 7 7 0 0114 0zM10 7v3m0 0v3m0-3h3m-3 0H7"
                    />
                  </svg>
                </div>
              </div>
              <div
                class="relative group cursor-pointer overflow-hidden rounded-lg"
                onclick={`openLightbox(${index * 2 + 1})`}
              >
                <span class="absolute top-2 left-2 bg-blue-600/90 text-white text-xs px-2 py-1 rounded z-10 pointer-events-none">
                  After
                </span>
                <img
                  src={item.after}
                  alt={`After ${item.title}`}
                  class="object-cover h-48 w-full border border-slate-800 group-hover:scale-105 transition-transform duration-500"
                />
                <div class="absolute inset-0 bg-black/0 group-hover:bg-black/20 transition-colors pointer-events-none flex items-center justify-center">
                  <svg
                    class="w-8 h-8 text-white opacity-0 group-hover:opacity-100 transition-opacity"
                    fill="none"
                    viewBox="0 0 24 24"
                    stroke="currentColor"
                  >
                    <path
                      stroke-linecap="round"
                      stroke-linejoin="round"
                      stroke-width="2"
                      d="M21 21l-6-6m2-5a7 7 0 11-14 0 7 7 0 0114 0zM10 7v3m0 0v3m0-3h3m-3 0H7"
                    />
                  </svg>
                </div>
              </div>
            </div>
          </div>
        ))
      }
    </div>
  </div>

  <!-- Lightbox Modal -->
  <div
    id="lightbox"
    class="fixed inset-0 z-50 flex items-center justify-center bg-black/95 backdrop-blur-md opacity-0 pointer-events-none transition-opacity duration-300"
    onclick="closeLightbox()"
  >
    <!-- Close Button -->
    <button
      class="absolute top-4 right-4 text-white hover:text-slate-300 transition-colors p-2 z-50"
      onclick="closeLightbox()"
      aria-label="Close"
    >
      <svg
        class="w-10 h-10"
        fill="none"
        viewBox="0 0 24 24"
        stroke="currentColor"
        ><path
          stroke-linecap="round"
          stroke-linejoin="round"
          stroke-width="2"
          d="M6 18L18 6M6 6l12 12"></path></svg
      >
    </button>

    <!-- Navigation Buttons -->
    <button
      class="absolute left-4 top-1/2 -translate-y-1/2 text-white/50 hover:text-white bg-black/20 hover:bg-black/50 rounded-full p-2 transition-all z-50"
      onclick="changeImage(-1, event)"
      aria-label="Previous"
    >
      <svg
        class="w-10 h-10"
        fill="none"
        viewBox="0 0 24 24"
        stroke="currentColor"
        ><path
          stroke-linecap="round"
          stroke-linejoin="round"
          stroke-width="2"
          d="M15 19l-7-7 7-7"></path></svg
      >
    </button>

    <button
      class="absolute right-4 top-1/2 -translate-y-1/2 text-white/50 hover:text-white bg-black/20 hover:bg-black/50 rounded-full p-2 transition-all z-50"
      onclick="changeImage(1, event)"
      aria-label="Next"
    >
      <svg
        class="w-10 h-10"
        fill="none"
        viewBox="0 0 24 24"
        stroke="currentColor"
        ><path
          stroke-linecap="round"
          stroke-linejoin="round"
          stroke-width="2"
          d="M9 5l7 7-7 7"></path></svg
      >
    </button>

    <div
      class="relative max-w-5xl max-h-[90vh] p-4 flex flex-col items-center"
      onclick="event.stopPropagation()"
    >
      <h5
        id="lightbox-caption"
        class="text-white text-center text-xl font-bold mb-4"
      >
      </h5>
      <img
        id="lightbox-img"
        src=""
        alt="Full view"
        class="max-w-full max-h-[80vh] rounded-lg shadow-2xl border border-slate-800 select-none"
      />
    </div>
  </div>
</section>

<!-- Pass structured data to client -->
<script define:vars={{ flatImages }}>
  window.galleryImages = flatImages;
</script>

<script is:inline>
  let currentIndex = 0;
  const lightbox = document.getElementById("lightbox");
  const img = document.getElementById("lightbox-img");
  const title = document.getElementById("lightbox-caption");

  function openLightbox(index) {
    if (lightbox && img && title && window.galleryImages) {
      currentIndex = index;
      updateImage();
      lightbox.classList.remove("opacity-0", "pointer-events-none");
    }
  }

  function closeLightbox() {
    if (lightbox) {
      lightbox.classList.add("opacity-0", "pointer-events-none");
    }
  }

  function changeImage(direction, event) {
    if (event) event.stopPropagation();

    currentIndex += direction;

    // Loop around
    if (currentIndex < 0) currentIndex = window.galleryImages.length - 1;
    if (currentIndex >= window.galleryImages.length) currentIndex = 0;

    updateImage();
  }

  function updateImage() {
    const imageData = window.galleryImages[currentIndex];
    img.src = imageData.src;
    title.textContent = imageData.caption;
  }

  // Keyboard navigation
  document.addEventListener("keydown", (e) => {
    if (lightbox.classList.contains("opacity-0")) return; // Only if open

    if (e.key === "Escape") closeLightbox();
    if (e.key === "ArrowLeft") changeImage(-1);
    if (e.key === "ArrowRight") changeImage(1);
  });
</script>
