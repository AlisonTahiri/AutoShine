<section id="contact" class="py-24 bg-slate-950 relative overflow-hidden">
  <div class="container mx-auto px-4 relative z-10">
    <div class="max-w-2xl mx-auto text-center mb-12">
      <h2 class="text-3xl md:text-4xl font-bold text-white mb-4">
        Ready to Shine?
      </h2>
      <p class="text-slate-400">
        Book your appointment today. Fill out the form below or give us a call.
      </p>
    </div>

    <form
      method="POST"
      data-netlify="true"
      name="contact"
      class="max-w-xl mx-auto space-y-6 bg-slate-900 p-8 rounded-2xl border border-slate-800"
    >
      <div class="grid grid-cols-2 gap-6">
        <div>
          <label
            for="name"
            class="block text-sm font-medium text-slate-300 mb-2">Name</label
          >
          <input
            type="text"
            id="name"
            name="name"
            class="w-full bg-slate-950 border border-slate-800 rounded-lg px-4 py-3 text-white focus:outline-none focus:border-blue-500 transition-colors"
            placeholder="John Doe"
          />
        </div>
        <div>
          <label
            for="phone"
            class="block text-sm font-medium text-slate-300 mb-2">Phone</label
          >
          <input
            type="tel"
            id="phone"
            name="phone"
            class="w-full bg-slate-950 border border-slate-800 rounded-lg px-4 py-3 text-white focus:outline-none focus:border-blue-500 transition-colors"
            placeholder="(555) 000-0000"
          />
        </div>
      </div>
      <div>
        <label
          for="service"
          class="block text-sm font-medium text-slate-300 mb-2"
          >Service Needed</label
        >
        <select
          id="service"
          name="service"
          class="w-full bg-slate-950 border border-slate-800 rounded-lg px-4 py-3 text-white focus:outline-none focus:border-blue-500 transition-colors"
        >
          <option>Window Tinting</option>
          <option>Interior Cleaning</option>
          <option>Full Package</option>
        </select>
      </div>
      <div>
        <label
          for="message"
          class="block text-sm font-medium text-slate-300 mb-2"
          >Vehicle Model / Notes</label
        >
        <textarea
          id="message"
          name="message"
          rows="4"
          class="w-full bg-slate-950 border border-slate-800 rounded-lg px-4 py-3 text-white focus:outline-none focus:border-blue-500 transition-colors"
          placeholder="2023 Tesla Model Y..."></textarea>
      </div>
      <button
        type="submit"
        class="w-full bg-blue-600 hover:bg-blue-500 text-white font-bold py-4 rounded-lg transition-colors"
      >
        Request Appointment
      </button>
    </form>
  </div>
</section>
