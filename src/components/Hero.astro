<section
  id="top"
  class="relative items-center flex min-h-screen pt-16 overflow-hidden"
>
  <!-- Background Image with Overlay -->
  <div class="absolute inset-0 z-0">
    <div
      class="absolute inset-0 bg-linear-to-t from-slate-950 via-slate-950/80 to-slate-950/40 z-10"
    >
    </div>
    <!-- Placeholder image until real assets provided -->
    <img
      src="https://images.unsplash.com/photo-1601362840469-51e4d8d58785?q=80&w=2670&auto=format&fit=crop"
      alt="Luxury Car Interior Tint"
      class="w-full h-full object-cover opacity-60"
    />
  </div>

  <div class="container mx-auto px-4 relative z-20 text-center md:text-left">
    <div class="max-w-3xl">
      <h1
        class="text-5xl md:text-7xl font-bold text-white tracking-tight mb-6 leading-tight animate-on-scroll"
      >
        Experience <span
          class="text-transparent bg-clip-text bg-linear-to-r from-blue-400 to-emerald-400"
          >Pure Detail</span
        >
      </h1>
      <p
        class="text-lg md:text-xl text-slate-300 mb-8 max-w-2xl leading-relaxed animate-on-scroll delay-100"
      >
        Premium window tinting and deep interior cleaning. Protect your car,
        enhance your privacy, and drive in immaculate comfort.
      </p>

      <div
        class="flex flex-col sm:flex-row gap-4 justify-center md:justify-start animate-on-scroll delay-200"
      >
        <a
          href="/#contact"
          class="inline-flex items-center justify-center px-8 py-3.5 text-base font-semibold text-white bg-blue-600 rounded-full hover:bg-blue-500 transition-colors shadow-lg shadow-blue-500/20"
        >
          Get a Quote
        </a>
        <a
          href="#services"
          class="inline-flex items-center justify-center px-8 py-3.5 text-base font-semibold text-slate-200 bg-slate-800/80 border border-slate-700 rounded-full hover:bg-slate-700/80 transition-colors backdrop-blur-sm"
        >
          View Services
        </a>
      </div>
    </div>
  </div>
</section>
