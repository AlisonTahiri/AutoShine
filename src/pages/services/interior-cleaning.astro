---
import Layout from '../../layouts/Layout.astro';
import Navbar from '../../components/Navbar.astro';
import Footer from '../../components/Footer.astro';
import Gallery from '../../components/Gallery.astro';

const cleanGallery = [
  {
    title: "Leather Restoration",
    before: "https://images.unsplash.com/photo-1601362840469-51e4d8d58785?q=80&w=2670&auto=format&fit=crop", // placeholder
    after: "https://images.unsplash.com/photo-1601362840469-51e4d8d58785?q=80&w=2670&auto=format&fit=crop" // placeholder
  },
   {
    title: "Upholstery Deep Clean",
    before: "https://images.unsplash.com/photo-1507136566006-cfc505b114fc?q=80&w=2670&auto=format&fit=crop", 
    after: "https://images.unsplash.com/photo-1552519507-da3b142c6e3d?q=80&w=2670&auto=format&fit=crop"
  }
];
---

<Layout title="Deep Interior Cleaning | AutoShine">
  <Navbar />
  
  <main class="pt-20">
    <header class="bg-slate-900 py-16 border-b border-slate-800">
      <div class="container mx-auto px-4 text-center">
        <h1 class="text-4xl md:text-5xl font-bold text-white mb-6">Interior Detailing</h1>
        <p class="text-xl text-slate-400 max-w-2xl mx-auto">Revitalize your vehicle's interior. We eliminate stains, odors, and dust.</p>
      </div>
    </header>

    <section class="py-16 bg-slate-950">
      <div class="container mx-auto px-4 max-w-5xl">
        
        <div class="grid md:grid-cols-2 gap-12 mb-16">
          <div class="bg-slate-900/50 p-8 rounded-3xl border border-slate-800">
            <h2 class="text-2xl font-bold text-white mb-4">Express Clean</h2>
            <ul class="space-y-3 text-slate-400 mb-8">
              <li>• Vacuum Carpets & Seats</li>
              <li>• Wipe Down Surfaces</li>
              <li>• Window Cleaning</li>
              <li>• Air Freshener</li>
            </ul>
            <p class="text-2xl font-bold text-blue-400">From $149</p>
          </div>
          
           <div class="bg-gradient-to-br from-slate-900 to-slate-800 p-8 rounded-3xl border border-blue-500/30 relative overflow-hidden">
             <div class="absolute top-0 right-0 bg-blue-600 text-white text-xs font-bold px-3 py-1 rounded-bl-xl">POPULAR</div>
            <h2 class="text-2xl font-bold text-white mb-4">Showroom Reset</h2>
            <ul class="space-y-3 text-slate-300 mb-8">
              <li>• Deep Steam Clean</li>
              <li>• Leather Conditioning</li>
              <li>• Stain Extraction</li>
              <li>• Odor Removal (Ozone)</li>
              <li>• Dashboard Protection</li>
            </ul>
            <p class="text-2xl font-bold text-blue-400">From $299</p>
          </div>
        </div>

        <Gallery images={cleanGallery} />
        
        <div class="text-center mt-12">
           <a href="/#contact" class="inline-block px-8 py-4 bg-blue-600 hover:bg-blue-500 text-white font-bold rounded-full transition-colors">
            Book Appointment
          </a>
        </div>
      </div>
    </section>
  </main>

  <Footer />
</Layout>
