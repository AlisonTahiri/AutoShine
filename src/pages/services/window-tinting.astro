---
import Layout from "../../layouts/Layout.astro";
import Navbar from "../../components/Navbar.astro";
import Footer from "../../components/Footer.astro";
import Gallery from "../../components/Gallery.astro";

const tintGallery = [
  {
    title: "Tesla Model 3 - Ceramic Tint",
    before:
      "https://images.unsplash.com/photo-1560958089-b8a1929cea89?q=80&w=2671&auto=format&fit=crop",
    after:
      "https://images.unsplash.com/photo-1617788138017-80ad40651399?q=80&w=2670&auto=format&fit=crop",
  },
  {
    title: "BMW M4 - Carbon Tint",
    before:
      "https://images.unsplash.com/photo-1555215695-3004980ad54e?q=80&w=2670&auto=format&fit=crop",
    after:
      "https://images.unsplash.com/photo-1618843479313-40f8afb4b4d8?q=80&w=2670&auto=format&fit=crop",
  },
];
---

<Layout title="Premium Window Tinting | AutoShine">
  <Navbar />

  <main class="pt-20">
    <!-- Header -->
    <header
      class="bg-slate-900 py-16 border-b border-slate-800 animate-on-scroll"
    >
      <div class="container mx-auto px-4 text-center">
        <h1 class="text-4xl md:text-5xl font-bold text-white mb-6">
          Advanced Window Tinting
        </h1>
        <p class="text-xl text-slate-400 max-w-2xl mx-auto">
          Superior heat rejection, UV protection, and privacy for your vehicle.
        </p>
      </div>
    </header>

    <!-- Content -->
    <section class="py-16 bg-slate-950">
      <div class="container mx-auto px-4 max-w-4xl">
        <div class="grid md:grid-cols-3 gap-8 mb-16">
          <div
            class="p-6 bg-slate-900 rounded-2xl border border-slate-800 animate-on-scroll delay-100"
          >
            <h3 class="text-xl font-bold text-white mb-2">Ceramic Film</h3>
            <p class="text-slate-400">
              Top-tier heat rejection (up to 98% IP). Non-conductive, won't
              interfere with signals.
            </p>
          </div>
          <div
            class="p-6 bg-slate-900 rounded-2xl border border-slate-800 animate-on-scroll delay-200"
          >
            <h3 class="text-xl font-bold text-white mb-2">Carbon Film</h3>
            <p class="text-slate-400">
              Matte finish with excellent durability. Zero fading over time.
            </p>
          </div>
          <div
            class="p-6 bg-slate-900 rounded-2xl border border-slate-800 animate-on-scroll delay-300"
          >
            <h3 class="text-xl font-bold text-white mb-2">Dyed Film</h3>
            <p class="text-slate-400">
              Cost-effective glare reduction and privacy. Deep black appearance.
            </p>
          </div>
        </div>

        <h2 class="text-3xl font-bold text-white mb-8 animate-on-scroll">
          Why Tint Your Windows?
        </h2>
        <ul class="space-y-6 text-slate-300 text-lg mb-12">
          <li
            class="flex flex-col sm:flex-row sm:items-start gap-2 animate-on-scroll delay-100"
          >
            <div
              class="flex items-center font-bold text-white min-w-[180px] shrink-0"
            >
              <span class="text-blue-500 mr-3 text-xl">✓</span> UV Protection
            </div>
            <p class="text-slate-400 leading-relaxed">
              Blocks 99% of harmful rays, protecting your skin and significantly
              reducing interior fading.
            </p>
          </li>
          <li
            class="flex flex-col sm:flex-row sm:items-start gap-2 animate-on-scroll delay-200"
          >
            <div
              class="flex items-center font-bold text-white min-w-[180px] shrink-0"
            >
              <span class="text-blue-500 mr-3 text-xl">✓</span> Heat Control
            </div>
            <p class="text-slate-400 leading-relaxed">
              Keep your car cool even in the hottest summer days by rejecting up
              to 98% of infrared heat.
            </p>
          </li>
          <li
            class="flex flex-col sm:flex-row sm:items-start gap-2 animate-on-scroll delay-300"
          >
            <div
              class="flex items-center font-bold text-white min-w-[180px] shrink-0"
            >
              <span class="text-blue-500 mr-3 text-xl">✓</span> Privacy & Security
            </div>
            <p class="text-slate-400 leading-relaxed">
              Keep valuables out of sight and increase personal privacy while
              driving.
            </p>
          </li>
        </ul>

        <Gallery images={tintGallery} />

        <div class="text-center mt-12">
          <a
            href="/#contact"
            class="inline-block px-8 py-4 bg-blue-600 hover:bg-blue-500 text-white font-bold rounded-full transition-colors"
          >
            Get a Free Quote
          </a>
        </div>
      </div>
    </section>
  </main>

  <Footer />
</Layout>
