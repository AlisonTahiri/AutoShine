---
import Layout from "../layouts/Layout.astro";
import Navbar from "../components/Navbar.astro";
import Hero from "../components/Hero.astro";
import Services from "../components/Services.astro";
import Features from "../components/Features.astro";
import ContactForm from "../components/ContactForm.astro";
import Footer from "../components/Footer.astro";
import ComparisonSlider from "../components/ComparisonSlider.astro";
---

<Layout title="AutoShine - Premium Car Tinting & Detailing">
	<Navbar />
	<main>
		<Hero />

		<!-- Magic Reveal Showcase -->
		<section class="py-12 bg-slate-950">
			<div class="container mx-auto px-4">
				<h2
					class="text-3xl font-bold text-white text-center mb-8 animate-on-scroll"
				>
					See the Difference
				</h2>
				<div class="max-w-4xl mx-auto">
					<ComparisonSlider
						before="/tint-before.png"
						after="/tint-after.png"
						title="Premium Window Tint"
					/>
					<p
						class="text-center text-slate-400 mt-4 text-sm animate-on-scroll delay-100"
					>
						Drag the slider to see how our tint transforms your
						vehicle.
					</p>
				</div>
			</div>
		</section>

		<Services />
		<Features />
		<ContactForm />
	</main>
	<Footer />
</Layout>
